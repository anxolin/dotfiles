# Personal Info
set from = "anxo@angelrf.com"
set realname = "Anxo Rodriguez"
# by default, use mailbox
set spoolfile = "+angelrf/INBOX"
#source ~/.mutt/accounts/mailbox

set sendmail = "/usr/local/bin/msmtp -a angelrf"

# Mailboxes to show in the sidebar.
#mailboxes =ALL-INBOXES
mailboxes =angelrf/INBOX
#mailboxes =angelrf/INBOX =viu/INBOX
